<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>

    <!-- Bootstrap -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <!-- Custom CSS -->
   <!-- <link rel="stylesheet" type="text/css" href="~/css/Login.css">-->
    <link href="@Url.Content("~/css/Login.css")" rel="stylesheet" />
    <!-- JavaScript -->
     <!--<script src="~/js/Login.js"></script>-->
    <script src=@Url.Content("~/js/Login.js")></script>
    <style>
        body::before {
            content: "";
            position: absolute;
            width: 100%;
            height: 100%;
            background-image: url('@Url.Content("~/images/paper.jpg")');
            background-size: cover;
            z-index: -1;
        }
    </style>
    <script>
        var loginUrl = '@Url.Content("~/Login/Login")';
    </script>

</head>
<body>
    <div class="wrapper">
        <form>
            <h2>Login DashBoard</h2>

            <div class="input-field">
                <input id="txtUserName" type="text" required>
                <label for="txtUserName">Enter your User</label>
            </div>

            <div class="input-field">
                <input id="txtPassWord" type="password" required>
                <label for="txtPassWord">Enter your password</label>
            </div>
            <div class="mb-3">
                <select id="dashboard" class="form-select form-control">
                    <option value="" disabled selected>Select a Room</option>
                </select>
            </div>
            <div class="forget d-flex justify-content-between align-items-center">
                <label for="remember" class="remember-label">
                    <input type="checkbox" id="remember">
                    <span class="custom-checkbox"></span>
                    Remember
                </label>
            </div>
            <button type="button" id="login">Log In</button>
        </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

@* {
    Layout = null;
} *@
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <title>ASP Dashboard</title>
    <link rel="stylesheet" href="~/css/DashBoard.css">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="~/js/dashboard.js" type="text/javascript"></script>
    <script type="text/javascript">var absolutePath = '@Url.Content("~/")'</script>
</head>
<body>
    <header>
        <div class="dashboard-header">
            <div class="logo">
                <span class="asp">ASP</span> Dashboard
            </div>
            <div class="user-info">
                <time id="current-time" datetime=""></time>
                <span>Welcome Administrator</span>
               @*  <button class="settings-button" id="settings-button">⚙️</button> *@
                <a href=@Url.Content("~/Setting") class="nav-link">
                    <div class="info-box">
                        <span class="info-box-icon bg-primary elevation-1"><i class="fas fa-user-doctor"></i></span>
                        <div class="info-box-content">
                            <span class="info-box-text">⚙️</span>
                        </div>
                    </div>
                </a>
            </div>
        </div>
    </header>

    @* Cards *@
    <main class="dashboard-content">
        <div class="main-container">
            <div class="cards" id="dashboard-cards">
                <div class="card">
                    <div class="card-title-container">
                        <h3 class="card-title"></h3>
                    </div>
                </div>
                    <p class="card-sum"></p>
           </div>
            <div id="section-table-container"></div>
    @* </main> *@

    @* Recent *@
            <div class="recent-activities-container">
                <div class="recent-header">
                    <h3>RECENT ACTIVITIES</h3>
                </div>

                 <div class="timeline" id="recent-activities">
                     <p>Loading...</p>
                 </div>
            </div>
        </div>
    </main>

    <script src="~/js/DashBoard.js"></script>

    @* แจ้งเตือน *@
    <audio id="notification-audio">
        <source src="~/audio/1-286672.mp3" type="audio/mpeg">
        Your browser does not support the audio element.
    </audio>
</body>
</html>